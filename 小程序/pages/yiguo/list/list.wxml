<view class="list-tab">
    <ul>
        <li class="{{current == 0 ? 'active' : ''}}" catchtap="switchSlider" data-index="0">默认</li>
        <li class="{{current == 1 ? 'active' : ''}}" catchtap="switchSlider" data-index="1">价格</li>
        <li class="{{current == 2 ? 'active' : ''}}" catchtap="switchSlider" data-index="2">热销</li>
    </ul>
</view>

<view class="welfare-container"> 
  <scroll-view scroll-y="true">
      <view class="welfares">
         <block wx:for-items="{{goodsWelfareItems}}" wx:key="name">
          <view class="welfares-good" catchtap="catchTapCategory" data-id="{{item.goodsId}}" data-typeid="{{item.typeId}}">
            <view class="imgCss"  data-id="{{item.id}}">
              <image src="{{item.bannerUrl[0]}}" class="welfares-image" mode="widthFix"/> 
                  <view class="product-name">
              {{item.goodsName}}
            </view>
            <view class="product-price-wrap">
              <p class="product-price-new">￥{{item.price}}</p>  
              <!-- <p class="product-price-old">￥{{item.price}}</p> 
              <p class="discount">{{item.price}}折</p>   -->
            </view>
            </view>   
          </view>
        </block> 
      </view>
  </scroll-view>  
</view> 