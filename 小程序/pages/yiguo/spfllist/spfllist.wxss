/* 全局样式 */
page, .page {
  height: 100%;
  font-size: 30rpx;
  font-style: PingFangSC-Medium;
}
/* 左边栏样式 */
.left-slidebar {
  height: 100%;
  width: 300rpx;
  position: fixed;
  left: -300rpx;
  background-color:white;
  z-index: 11;
}
.wc {
  color:black;
  padding: 30rpx 20rpx 30rpx 20rpx;
  border-bottom: 1px solid #eee; 
} 
.wc_selected{
  color: #409eff;
}
.left_show{
  transform: translateX(300rpx);
  transition: all 0.2s linear;
}
.left_hidden{
  transform: translateX(-300rpx);
  transition: all 0.2s linear;
}
/* 右边栏样式 */
.right-slidebar{
  height: 100%;
  width: 450rpx;
  position: fixed;
  right: -450rpx;
  background-color:white;
  z-index: 11;
}
.jgqj_label{
  margin: 40rpx 0 20rpx 20rpx;
}
.jgqj{
  padding: 20rpx;
  display: flex;
}
.jgqj input{
  font-size: 25rpx;
  width: 150rpx;
  height: 70rpx;
  border: 1px solid #808080;
  box-sizing: border-box;
  text-align: center;
}
.j_text{
  line-height: 70rpx;
  width: 100rpx;
  text-align: center;
}
.jgqj_bottom{
  background: lightcoral;
  width: 100%;
  position: absolute;
  bottom: 0;
  display: flex;
}
.jgqj_bottom view{
  width: 50%;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}
.l_button{
  background: #eea538;
}
.r_button{
  background: #409eff;
}
.right_show{
  transform: translateX(-450rpx);
  transition: all 0.2s linear;
}
.right_hidden{
  transform: translateX(450rpx);
  transition: all 0.2s linear;
}

